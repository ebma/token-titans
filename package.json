{
  "name": "games-collection-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client": "bun --cwd packages/client run dev",
    "server": "bun --cwd packages/server run dev",
    "dev": "bash -lc \"(cd \"packages/server\" && bun run dev &) && (cd \"packages/client\" && bun run dev)\""
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@types/three": "^0.180.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
