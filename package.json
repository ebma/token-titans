{
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "concurrently": "^9.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --formatter-enabled=true --linter-enabled=false"
    ],
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched --formatter-enabled=true --linter-enabled=false"
    ]
  },
  "name": "games-collection-monorepo",
  "private": true,
  "scripts": {
    "client": "bun --cwd packages/client run dev",
    "dev": "concurrently -n 'backend,frontend' -c 'bgBlue.bold,bgGreen.bold' 'cd packages/server && bun run dev' 'cd packages/client && bun run dev'",
    "format": "biome check --write --unsafe --no-errors-on-unmatched",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "prepare": "husky",
    "server": "bun --cwd packages/server run dev"
  },
  "verify": "biome check --no-errors-on-unmatched",
  "workspaces": [
    "packages/*"
  ]
}
